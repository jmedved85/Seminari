@model IEnumerable<Seminari.Models.Predbiljezba>

@{
    ViewData["Title"] = "Reservations";
}

<form asp-controller="Predbiljezbas" asp-action="Index">
    <label for="pretraga"><strong>Pretraga: </strong></label>
    <input type="text" id="pretraga" name="pretraga" />
    <input type="submit" value="Pretraži" />
</form>

<br />

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.IdSeminar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPredbiljezba">Odaberi</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSeminarNavigation.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>                    
                    @if (item.Status == true) 
                     {
                         <span style="color:green">Prihvaćen</span>
                     }
                     else if (item.Status == false)
                     {
                          <span style="color:red">Odbijen</span>
                     }
                     else 
                     {
                          <span style="color:steelblue">Neobrađen</span>
                     }
                </td>
            </tr>
        }
    </tbody>
</table>
